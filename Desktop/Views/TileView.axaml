<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tiles="clr-namespace:CoreTiles.Desktop.Tiles"
             x:Class="CoreTiles.Desktop.Views.TileView">
  <!--<Grid Name="MainGrid" ShowGridLines="True" RowDefinitions="100*" />-->
  <Grid Name="MainGrid" ColumnDefinitions="50*,50*" RowDefinitions="100*">
    <StackPanel Grid.Row="0" Grid.Column="0">
      <ItemsControl Items="{Binding Items[0]}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <tiles:BaseTile />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </StackPanel>
    <StackPanel Grid.Row="0" Grid.Column="1">
      <ItemsControl Items="{Binding Items[1]}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <tiles:BaseTile />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </StackPanel>
  </Grid>
</UserControl>

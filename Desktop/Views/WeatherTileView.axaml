<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dd="clr-namespace:CoreTiles.Desktop.InternalServices;assembly=CoreTiles.Desktop"
             Design.DataContext="{x:Static dd:DesignData.WeatherUpdate}"
             x:Class="CoreTiles.Desktop.Views.WeatherTileView">
  <Border Background="#495057" Padding="4" Margin="4" CornerRadius="3" BorderThickness="2" BorderBrush="Azure">
    <StackPanel ClipToBounds="True">
      <Viewbox Stretch="Uniform" Height="150">
        <TextBlock Text="{Binding Update}" />
      </Viewbox>
    </StackPanel>
  </Border>
</UserControl>

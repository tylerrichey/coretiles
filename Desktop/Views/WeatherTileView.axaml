<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dd="clr-namespace:CoreTiles.Desktop.InternalServices;assembly=CoreTiles.Desktop"
             Design.DataContext="{x:Static dd:DesignData.WeatherUpdate}"
             Design.Width="450"
             Height="150"
             x:Class="CoreTiles.Desktop.Views.WeatherTileView">
  <Border Background="#495057" Padding="4" Margin="4" CornerRadius="3" BorderThickness="2" BorderBrush="Azure" ClipToBounds="True">
    <Grid ColumnDefinitions="60*,40*" RowDefinitions="50*,50*">
      <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
        <WrapPanel Orientation="Horizontal">
          <TextBlock FontSize="50" Text="{Binding CurrentString}" VerticalAlignment="Center" Padding="4" />
          <TextBlock FontSize="22" Text="{Binding Conditions}" VerticalAlignment="Center" Padding="18" />
          <TextBlock FontSize="18" Text="{Binding High}" VerticalAlignment="Center" Foreground="Red" />
          <TextBlock FontSize="18" Text=" | " VerticalAlignment="Center" />
          <TextBlock FontSize="18" Text="{Binding Low}"  VerticalAlignment="Center" Foreground="Blue" />
        </WrapPanel>
      </StackPanel>
      <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
        <Viewbox Stretch="Uniform" Height="110" HorizontalAlignment="Center" Margin="4">
          <TextBlock Text="{Binding Emoji}" Padding="3" />
        </Viewbox>
      </StackPanel>
      <WrapPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2">
        <TextBlock FontSize="14" Text="{Binding FullConditions}" TextWrapping="Wrap" TextTrimming="WordEllipsis" Padding="4" HorizontalAlignment="Center" />
      </WrapPanel>
    </Grid>
  </Border>
</UserControl>
